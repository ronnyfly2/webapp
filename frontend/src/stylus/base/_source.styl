html
	font-family 'Lato'
	background-color #fafbfc
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-size 16px
body
	//-height 100%
	width 100%
.container
	//background white url('./assets/img/fondo.jpg') no-repeat
	//background-size cover
	background #f3f9ff
	width 100%
	height 100%
	padding-top 74px
.box_center
	max-width 1140px
	margin 0 auto
.btn
	font-family 'Lato'
	display block
	outline none
	line-height 1.97
	font-size 20px
	text-align center
	color #ffffff
	border-radius 7px
	border 0
	&_green
		background-color #21d39a
	&_red
		background-color #fe6868
	&_gray
		background-color #bed2ee
	&_create
		min-width 280px
	&_black
		background-color #06090f
.list_normal
	.el-col
		margin-bottom 25px
.list_source
	margin-top 90px
	margin-bottom 40px
	padding-top 132px
.box_item
	font-size 18px
	i
	.box_text
		display inline-block
		vertical-align middle
		color #009edb
	h4
		font-family 'SanFranciscoDisplay-Bold'
	&_gray
		i
		.box_text
			color #92bacb
.mask
	position absolute
	width 100%
	height 100%
	border-radius 5px
	background-color rgba(0, 72, 101, 0.91)
	top 0
	left 0
	a
		width 33%
		display inline-block
		text-align center
		color white
		&:hover
			color #009edb
		i
			display block
			margin 0 auto
			font-size 45px
			line-height 1
		span
			font-family 20px
.col_form_16
	border-right solid 1px #bed2ee
.padding_form
	padding 0 45px
.box_white_form
	background white
	margin-top 122px
	box-shadow 0 1px 7px 0 rgba(178, 218, 241, 0.6)
	padding 36px 0
	.btn
		width 100%
	label
		width 100%
		background #f4f9ff
		font-size 18px
		color #009edb
		display block
		line-height 2.6
		font-family SanFranciscoDisplay-Bold
	input
		width 96%
		outline 0
		&[type=text], &[type=password]
			color #58889c
			height 35px
			text-align  center
			border 0
			border-bottom 1px solid #bed2ee
			font-size 16px
			border-radius 0
			&::-webkit-input-placeholder
				color #58889c
			&::-moz-placeholder
				color #58889c
				opacity 1
			&:-moz-placeholder
				color #58889c
				opacity 1
			&::-o-input-placeholder
				color #58889c
			&::-ms-input-placeholder
				color #58889c
			&:-ms-input-placeholder
				color #58889c
			&[readonly]
				color #bed2ee
	.el-input
		input
			&[readonly]
				color #58889c
	.el-select
		width 100%
		border 0
		border-radius 0
		background white
		text-align center
		height 35px
		outline 0
		color #58889c
		option
			color #58889c
			text-align center
	.el-form-item__label
		padding 0
		text-align center
	.el-button
		padding 0
		margin -15px 0
	fieldset
	.el-form-item
		margin 30px 0
		position relative
		.base_border
			display block
			width 100%
			&:before
			&:after
				content ''
				width 1px
				background #bed2ee
				height 5px
				position absolute
				bottom 0
			&:after
				right 2%
			&:before
				left 2%
	.icon
		font-size 27px
		color #009edb
.row_btn
	margin-top 20px
	margin-right 0 !important
	margin-left 0 !important
	.btn
		max-width 185px
	fieldset
		position relative
		.btn_green
			position absolute
			right 0
.empty_padding
	margin-right 0 !important